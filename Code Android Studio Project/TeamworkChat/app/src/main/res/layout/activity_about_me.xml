<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutMeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="9">

        <WebView
            android:id="@+id/aboutMeActivityWebViewID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/owner_pic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutmeTextView"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/aboutMeActivityGmailImageButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#B3B8B7"
            android:src="@drawable/gmail" />

        <ImageButton
            android:id="@+id/aboutMeActivityGithubImageButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#B3B8B7"
            android:src="@drawable/github" />

        <ImageButton
            android:id="@+id/aboutMeActivityPersonalWebsiteImageButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#B3B8B7"
            android:src="@drawable/personal_website" />

        <ImageButton
            android:id="@+id/aboutMeActivityFacebookImageButtonID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#B3B8B7"
            android:src="@drawable/facebook" />

        <ProgressBar
            android:id="@+id/aboutMeActivityProgressBarID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.9"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>